{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "lib": ["es2022"],
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src", "src/test"],
  "exclude": ["node_modules"]
}
